/* custom-tab-bar/index.wxss */
.tabBar {
  width: 100%;
  height: 104rpx;
  background:rgba(40,67,82,1);
  opacity:1;
  border-radius:2px 2px 0px 0px;
  display: flex;
  justify-content: space-between;
}

.tabBar-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 0;
}

.tabBar-item:first-child {
  margin-left: 76rpx;
}

.tabBar-item:last-child {
  margin-right: 76rpx;
}

.tabBar-item image {
  width:50rpx;
  height:46rpx;
  opacity:1;
  margin: 0 auto;
}

.tabBar-item-title {
  height:24rpx;
  font-size:12px;
  font-family:SimHei;
  font-weight:400;
  line-height:16px;
  letter-spacing: 2rpx;
  opacity:1;
  margin-top: 6rpx;
  margin-bottom: 4rpx;
}