  background-color: rgba(235, 241, 245, 0.54);
}
.sortBy {
  margin: 0 auto;
  color: #b5b5b5;
}
.sortBy .byPrice {
  transform: translateX(260rpx);
  width: 116rpx;
  height: 42rpx;
  line-height: 42rpx;
  float: left;
  font-size: 32rpx;
  margin-top: 20rpx;
}
.sortBy .byPrice .img {
  width: 40rpx;
  height: 40rpx;
  transform: translateY(8rpx);
}
.sortBy .byNew {
  margin-top: 20rpx;
  float: left;
  width: 116rpx;
  height: 42rpx;
  line-height: 42rpx;
  font-size: 32rpx;
  transform: translateX(290rpx);
}
.sortBy .byNew .img {
  width: 40rpx;
  height: 40rpx;
  transform: translateY(8rpx);
}
.sortBy .choose {
