/* ###################### 下面是navgationBar的样式 ######################### */


/* 顶部导航栏样式开始 */
.page{
  position: relative;
  top: 0;
  width: 100%;
}

/* 导航栏样式 */
.page .navigation-container{
  background-color: white;
  font-family: SF UI Test;
  color:rgba(61, 98, 119, 1);
  width: 100%;
  position:fixed;
  top:0;
  box-shadow: 0 0 rgba(204, 204, 204,.25);
  z-index: 100;
}

.page .statusBar{
  background-color: rgba(40, 67, 82, 1);
}

.page .navigation-bar{
  background-color: rgba(40, 67, 82, 1);
}

.page .navigation-buttons{
  display: flex;
  padding-top: 6px;
}

.page .navigation-week{
  width: 150rpx;
  display: flex;
  justify-content: center;
  background-color: white;
  border-radius: 0 40rpx 40rpx 0;
  height: 28px;
  margin-top: 4px;
}
.page .navigation-week view{
  font-size: 14px;
  margin: auto;
}

.page .navigation-week i-icon {
  margin: auto;
  margin-left: 0;
}

.page .navigation-switch{
  width: 216rpx;
  background-color: rgba(151, 187, 212, 1);
  text-align: center;
  display: flex;
  box-shadow: 0 0 rgba(204, 204, 204,.45);
  padding: 6rpx 6rpx;
  height: 22px;
  margin-top: 4px;
  float: right;
  margin-left: 117rpx;
  color: #fff;
}

.page .navigation-switch view{
  width: 110rpx;
  font-size: 14px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.page .hover{
  background-color: #FFF;
  color: rgba(170, 203, 226, 1);
}
/* 顶部导航栏样式结束 */

