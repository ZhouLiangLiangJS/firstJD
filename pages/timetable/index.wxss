/* ############################ 滑动过渡动画 ############################# */

.fixHide {
  transition: all .3s ease;
  transform: translateX(-100%);
}
.fixShow {
  transition: all .3s ease;
  height: 100%;
  transform: translateX(0%);
  background-color: rgba(61, 98, 119, 0.8);
}
.pageHide {
  transition: all .3s ease;
  bottom: 0;
  transform: translateX(0.001) scaleY(1);
}
.pageShow {
  position: fixed;
  transition: all .3s ease;
  height: 1400rpx;
  width: 100%;
  transform: translateX(72%) translateY(8%);
}


